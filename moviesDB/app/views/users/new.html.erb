<h1>Register</h1>
<%= form_for @user do |f| %>
	<%= f.error_messages %>
	<%= f.label :name %>
	<br/>
	<%= f.text_field :name %>
	<br/>
	<%= f.label :email %>
	<br/>
	<%= f.email_field :email%>
	<br/>
	<%= f.label :password %>
	<br/>
	<%= f.password_field :password%>
	<br/>
    <%= f.label :confirm_password%>
	<br/>
	<%= f.password_field :confirm_password%>
	<br/>
	<%= f.submit 'Register' %>
<% end %>